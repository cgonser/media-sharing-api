        <style>

            :root {
                color-scheme: light;
                supported-color-schemes: light;
            }

            html,
            body {
                margin: 0 auto !important;
                padding: 0 !important;
                height: 100% !important;
                width: 100% !important;
            }

            * {
                -ms-text-size-adjust: 100%;
                -webkit-text-size-adjust: 100%;
            }

            div[style*="margin: 16px 0"] {
                margin: 0 !important;
            }

            #MessageViewBody, #MessageWebViewDiv {
                width: 100% !important;
            }

            table,
            td {
                mso-table-lspace: 0pt !important;
                mso-table-rspace: 0pt !important;
            }

            table {
                border-spacing: 0 !important;
                border-collapse: collapse !important;
                table-layout: fixed !important;
                margin: 0 auto !important;
            }

            img {
                -ms-interpolation-mode: bicubic;
            }

            a {
                text-decoration: none;
            }

            a[x-apple-data-detectors], /* iOS */
            .unstyle-auto-detected-links a,
            .aBn {
                border-bottom: 0 !important;
                cursor: default !important;
                color: inherit !important;
                text-decoration: none !important;
                font-size: inherit !important;
                font-family: inherit !important;
                font-weight: inherit !important;
                line-height: inherit !important;
            }

            .a6S {
                display: none !important;
                opacity: 0.01 !important;
            }

            .im {
                color: inherit !important;
            }

            img.g-img + div {
                display: none !important;
            }

            /* iPhone 4, 4S, 5, 5S, 5C, and 5SE */
            @media only screen and (min-device-width: 320px) and (max-device-width: 374px) {
                u ~ div .email-container {
                    min-width: 320px !important;
                }
            }

            /* iPhone 6, 6S, 7, 8, and X */
            @media only screen and (min-device-width: 375px) and (max-device-width: 413px) {
                u ~ div .email-container {
                    min-width: 375px !important;
                }
            }

            /* iPhone 6+, 7+, and 8+ */
            @media only screen and (min-device-width: 414px) {
                u ~ div .email-container {
                    min-width: 414px !important;
                }
            }
        </style>

        <style>
            .button-td {
                background: #2C00CC;
                border-width: 0px;
                padding: 15px 74px;
                border-radius: 4px;
                color: #fff !important;
                font-family: Raleway, Helvetica, Arial, sans-serif;
                font-size: 18px;
                font-weight: 700;
                line-height: 26px;
                letter-spacing: -0.6px;
                text-align: center;
            }

            .button-a {
                background: #2C00CC;
                border-width: 0px;
                border-radius: 4px;
                color: #fff !important;
                font-family: Raleway, Helvetica, Arial, sans-serif;
                font-size: 18px;
                font-weight: 700;
                line-height: 26px;
                letter-spacing: -0.6px;
                text-align: center;
            }

            @media screen and (max-width: 600px) {
                .email-container p {
                    font-size: 17px !important;
                }
            }

            body {
                color: #000;
                font-family: Helvetica, Arial, sans-serif;
                font-size: 16px;
                font-weight: 400;
                line-height: 24px;
                background: #fff;
            }

            p {
                margin-bottom: 40px;
                color: #000;
                font-family: Helvetica, Arial, sans-serif;
                font-size: 16px;
                font-weight: 400;
                line-height: 24px;

            }

            h1 {
                color: #000;
                font-family: Raleway, Helvetica, Arial, sans-serif;
                font-size: 32px;
                font-weight: 900;
                line-height: 50px;
                letter-spacing: -0.6248px;
            }

            h2 {
                color: #000;
                font-family: Raleway, Helvetica, Arial, sans-serif;
                font-size: 24px;
                font-weight: 700;
                line-height: 37px;
                letter-spacing: -0.6248px;
            }

            h3 {
                color: #000;
                font-family: Raleway, Helvetica, Arial, sans-serif;
                font-size: 18px;
                font-weight: 700;
                line-height: 26px;
                letter-spacing: -0.6248px;
            }

            a:link {
                color: #000;
                font-weight: 900;
            }

            a:visited {
                color: #2C00CC;
            }

            a:hover {
                color: #2C00CC;
            }

        </style>
    </head>

    <body width="100%" style="margin: 0; padding: 0 !important; mso-line-height-rule: exactly; background-color: #fff;">
    <center role="article" aria-roledescription="email" lang="en" style="width: 100%; background-color: #fff;">

        <!--[if mso | IE]>
        <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%"
               style="background-color: #fff;">
            <tr>
                <td>
        <![endif]-->

        {% block pre_header %}
            {% if pre_header_text is defined %}
                <div style="max-height:0; overflow:hidden; mso-hide:all;" aria-hidden="true">
                    {{ pre_header_text|trans|markdown_to_html }}
                </div>
            {% endif %}
        {% endblock %}

        <div style="display: none; font-size: 1px; line-height: 1px; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden; mso-hide: all; font-family: sans-serif;"></div>

        <div style="max-width: 600px; margin: 0 auto;" class="email-container">
            <!--[if mso]>
            <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="600">
                <tr>
                    <td>
            <![endif]-->

            <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%"
                   style="margin: auto;">
                <tr>
                    <td style="padding: 20px 0; text-align: center">
                        Itinair
                    </td>
                </tr>

                <tr>
                    <td style="background-color: #ffffff;">
                        {% block hero %}{% endblock %}
                    </td>
                </tr>
                <tr>
                    <td style="background-color: #ffffff;">
                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                            <tr>
                                <td style="padding: 0px 20px;">
                                    {% block greeting %}
                                        {% if greeting_name is defined and greeting_name|trim|length > 0 %}
                                            <h1>{{ 'base.greeting'|trans({'%greeting_name%': greeting_name}) }}</h1>
                                        {% else %}
                                            <h1>{{ 'base.greeting_annonymous'|trans }}</h1>
                                        {% endif %}
                                    {% endblock %}
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 0 20px;">
                                    {% block content %}
                                        {{ content|trans|markdown_to_html }}
                                    {% endblock %}
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 0px 20px;">
                                    {{ 'base.contact_us'|trans|markdown_to_html }}
                                </td>
                            </tr>

                        </table>
                    </td>
                </tr>
                <tr>
                    <td aria-hidden="true" height="100" style="font-size: 0px; line-height: 0px;">&nbsp;</td>
                </tr>
            </table>

            <!--[if mso]>
            </td>
            </tr>
            </table>
            <![endif]-->
        </div>
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="
                    background: #2C00CC;
                    font-size: 12px;
                    color:  #fff;
                    width: 100%;
                    min-width: 100%;
                    margin-top: 80px;">
            <tr>
                <td>
                    <div style="text-align: center; padding: 20px;">

                        <br>
                        <p style="line-height: 16px; font-size: 12px; color: #fff">You are receiving this email
                            because<br>you signed up on <a style="color: #fff!important;" href="https://itinair.com"
                                                           target="_blank">itinair.com.</a></p>
                    </div>
                </td>
            </tr>
        </table>

        <!--[if mso | IE]>
        </td>
        </tr>
        </table>
        <![endif]-->
    </center>
    </body>
    </html>

{% endapply %}